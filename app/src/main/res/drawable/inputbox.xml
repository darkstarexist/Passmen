<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Border color -->
    <stroke
        android:width="0.5dp"
        android:color="#3A3535" /> <!-- Replace with any color -->

    <!-- Background color -->
    <solid android:color="#2A2524" /> <!-- Optional: background inside EditText -->

    <!-- Corner radius for rounded edges -->
    <corners android:radius="22dp" /> <!-- Change as needed -->

    <!-- Optional padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
